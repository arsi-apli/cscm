<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>sk.arsi</groupId>
        <artifactId>CodeSnippetsCommunityManager</artifactId>
        <version>01.01</version>
    </parent>
    <artifactId>CodeSnippetsCommunityManager-Module</artifactId>
    <packaging>nbm</packaging>
    <version>01.09</version>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <version>4.2-SNAPSHOT</version>
                <extensions>true</extensions>
                <configuration>
                    <cluster>ide</cluster>
                    <requiresRestart>true</requiresRestart>
                    <nbmResources>
                        <nbmResource>
                            <directory>src/main/patches/</directory>
                            <targetPath>modules/patches/org-netbeans-modules-editor-completion</targetPath>
                            <includes>
                                <include>*</include>
                            </includes>
                        </nbmResource>
                    </nbmResources>
                    <moduleDependencies>
                        <dependency>
                            Private Package Reference
                            <id>org.netbeans.api:org-netbeans-modules-editor-completion</id>
                            <type>impl</type>
                        </dependency>
                        <dependency>
                            Private Package Reference
                            <id>org.netbeans.api:org-netbeans-modules-editor-mimelookup</id>
                            <type>impl</type>
                        </dependency>
                    </moduleDependencies>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <finalName>${module.name}</finalName>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
                </configuration>
            </plugin>
            <plugin>
                <groupId>sk.arsi</groupId>
                <artifactId>CodeSnippetsCommunityManager-maven-plugin</artifactId>
                <version>1.0</version>
                <configuration>
                    <serverId>server.arsi.sk</serverId>
                    <sftpUrl>server.arsi.sk</sftpUrl>
                    <sftpPath>/var/www/html/cscm/${nb.version}</sftpPath>
                    <netbeansSiteDir>${module.target}/netbeans_site</netbeansSiteDir>
                </configuration>
                
            </plugin>
        </plugins>
        <directory>${module.target}</directory>
        <finalName>${module.name}</finalName>
     
    </build>
    <repositories>
        <repository>
            <id>netbeans</id>
            <name>Repository hosting NetBeans modules</name>
            <url>http://bits.netbeans.org/nexus/content/groups/netbeans</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
